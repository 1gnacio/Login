@{
    ViewData["Title"] = "Login";
}

@model SimpleLogin.Models.ViewModel.UsuarioVM
<h1>Inicio de Sesion</h1>
<form asp-action="Login" asp-controller="Login" id="InicioSesion">
    <div class="row">
        <div class="form-group col-md-3">
            <label>Usuario</label>
            <input type="text" asp-for="Nombre" class="form-control"/>
            <span asp-validation-for="Nombre"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            <label>Contraseña</label>
            <input type="password" asp-for="Clave" class="form-control"/>
            <span asp-validation-for="Clave"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-3">
            <button type="submit" class="btn btn-primary">Log In</button>
        </div>
    </div>
</form>
